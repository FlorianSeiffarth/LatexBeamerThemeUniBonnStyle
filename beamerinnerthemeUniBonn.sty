	\setbeamertemplate{frametitle}{
		\vskip 4cm
		\begin{beamercolorbox}[wd=\paperwidth]{}
			\begin{beamercolorbox}[sep=1em, wd=0.8\paperwidth, ht=.15\paperheight, leftskip = 2ex]{frametitle}
				\usebeamerfont{frametitle}\insertframetitle\par%
				\usebeamerfont{framesubtitle}\insertframesubtitle\par%
			\end{beamercolorbox}%
			\begin{beamercolorbox}[wd=0.1\paperwidth, ht=.15\paperheight, leftskip = 2ex]{graybox}
			\end{beamercolorbox}%
			\begin{beamercolorbox}[wd=0.1\paperwidth, ht=.15\paperheight, leftskip = 2ex]{yellowbox}
			\end{beamercolorbox}%
		\end{beamercolorbox}}
	\begin{frame}{#1}}{\end{frame}}


