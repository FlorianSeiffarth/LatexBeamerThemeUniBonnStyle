% Footline
\setbeamertemplate{footline}
{
	\begin{beamercolorbox}[wd=\paperwidth,ht=2.75ex,dp=0.8ex]{bluebox}
		\begin{beamercolorbox}[wd=.4\paperwidth,ht=2.75ex,dp=0.8ex, leftskip = 2ex]{whitetext}%
			\usebeamerfont{author in head/foot}\insertshortauthor~~\beamer@ifempty{\insertshortinstitute}{}
		\end{beamercolorbox}%
		\begin{beamercolorbox}[wd=.35\paperwidth,ht=2.75ex,dp=0.8ex, left]{whitetext}%
			\usebeamerfont{title in head/foot}\insertshorttitle
		\end{beamercolorbox}%
		\begin{beamercolorbox}[wd=.25\paperwidth,ht=2.75ex,dp=0.8ex,right]{whitetext}%
			\usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
			\insertframenumber{} / \inserttotalframenumber\hspace*{2.75ex} 
		\end{beamercolorbox}%
	\end{beamercolorbox}
	\vskip0.2cm%
}

